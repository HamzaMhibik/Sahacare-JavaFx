<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.Admin.AddLaboratoire"
      spacing="10" alignment="CENTER">

    <Label text="Ajouter un Laboratoire" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Champ pour l'email -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Email:" />
        <TextField fx:id="emailField" promptText="Entrez l'email" />
    </HBox>

    <!-- Champ pour le nom d'utilisateur -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nom d'utilisateur:" />
        <TextField fx:id="usernameField" promptText="Entrez le nom d'utilisateur" />
    </HBox>

    <!-- Champ pour le mot de passe -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Mot de passe:" />
        <TextField fx:id="passwordField" promptText="Entrez le mot de passe" />
    </HBox>

    <!-- Champ pour le téléphone -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Téléphone:" />
        <TextField fx:id="phoneField" promptText="Entrez le téléphone" />
    </HBox>

    <!-- Champ pour l'adresse -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Adresse:" />
        <TextField fx:id="addressField" promptText="Entrez l'adresse" />
    </HBox>

    <!-- Champ pour la ville -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Ville:" />
        <TextField fx:id="cityField" promptText="Entrez la ville" />
    </HBox>

    <!-- Bouton pour valider l'ajout -->
    <Button text="Ajouter" onAction="#handleAddLaboratoire" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />

</VBox>